            </dependency>

            <dependency>
                <groupId>com.gzxant</groupId>
                <artifactId>gzxant-food-safety-web</artifactId>
                <version>${gzxant.version}</version>
            </dependency>

            <dependency>
                <groupId>com.gzxant</groupId>
                <artifactId>gzxant-food-safety-webback</artifactId>
