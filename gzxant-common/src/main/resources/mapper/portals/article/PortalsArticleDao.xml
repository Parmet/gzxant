<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.gzxant.dao.portals.article.PortalsArticleDao">

	<!-- 通用查询映射结果 -->
	<resultMap id="BaseResultMap" type="com.gzxant.entity.portals.article.PortalsArticle">
		<result column="update_id" property="updateId" />
		<result column="title" property="title" />
		<result column="content" property="content" />
		<result column="type" property="type" />
		<result column="tags" property="tags" />
		<result column="categories" property="categories" />
		<result column="allow_comment" property="allowComment" />
		<result column="status" property="status" />
		<result column="author" property="author" />
		<result column="column_id" property="columnId" />
	</resultMap>

	<select id="selectAllArticle"  resultType="com.gzxant.entity.portals.article.PortalsArticle">
		select (select column_name from portals_column where id = a.column_id) as columnName, a.* from portals_article a ;
	</select>

	<select id="selectPage"  resultType="com.gzxant.entity.portals.article.PortalsArticle">
		SELECT
		a.*,
		(select
		column_name
		from
		portals_column
		where
		id = a.column_id) as columnName
		FROM
			portals_article as a
		<where>
			${ew.sqlSegment}
		</where>
	</select>

</mapper>
