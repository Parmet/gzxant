<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.gzxant.dao.standard.category.StandardCategoryDao">

	<!-- 通用查询映射结果 -->
	<resultMap id="BaseResultMap" type="com.gzxant.entity.standard.category.StandardCategory">
		<result column="name" property="name" />
		<result column="update_id" property="updateId" />
		<result column="parent" property="parent" />
		<result column="sort" property="sort" />
		<result column="path" property="path" />
	</resultMap>

	<select id="selectSubCategory" resultMap="BaseResultMap">
		SELECT s.id,s.name,s.sort,s.path,s.parent,s.remark
        FROM  standard_category AS s
        WHERE s.id = #{name}
        GROUP BY s.`name`
	</select>



</mapper>
